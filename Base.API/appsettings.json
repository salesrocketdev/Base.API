{
  "ConnectionStrings": {},
  "Jwt": {
    "SecretKey": "",
    "Issuer": "Base",
    "Audience": "Base",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Security": {
    "PasswordHashing": {
      "Iterations": 600000
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP", // TODO: Configure RealIpHeader if behind a proxy/load balancer
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [], // TODO: Add trusted IPs if needed
    "EndpointWhitelist": [],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "POST:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/auth/signup",
        "Period": "1h",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/auth/forgot-password",
        "Period": "10m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/auth/reset-password",
        "Period": "10m",
        "Limit": 10
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },
  "Hangfire": {
    "Enabled": true,
    "UseDashboard": false,
    "Storage": "PostgreSql",
    "ConnectionString": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Seq": {
      "ServerUrl": "http://seq:5341",
      "MinimumLevel": "Information"
    }
  },
  "Seed": {
    "Enabled": false,
    "AdminEmail": "admin@Base.local",
    "AdminPassword": "",
    "AdminName": "Administrator"
  },
  "ZeptoMailSettings": {
    "Url": "https://api.zeptomail.com/v1.1",
      "Token": "",
      "FromAddress": "noreply@base.local",
    "FromName": "Base"
  },
  "AllowedHosts": "*"
}

